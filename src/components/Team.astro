---
import TeamMember from './TeamMember.astro';
import teamData from '../data/team.json';
import Marquee from './Marquee.astro';
const { teamMembers } = teamData;
---

<>
<div class="relative z-50">
<Marquee/>
</div>
<section id="team" class="py-32 bg-white">
  <div class="container mx-auto px-6 max-w-7xl">
    <!-- Bold Section Header -->
    <div class="text-center mb-24">
      <h2 class="font-display font-black text-[clamp(2.5rem,8vw,6rem)] leading-[0.9] tracking-tighter text-[#366951] mb-6">
        Meet Our<br>Collective
      </h2>
      <p class="text-xl text-[#366951] font-medium max-w-2xl mx-auto">
        The crew bringing your vision to life
      </p>
    </div>

    <!-- Team Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {teamMembers.map((member) => (
        <TeamMember member={member} />
      ))}
    </div>

    <!-- Cancellation Policy Callout -->
    <div class="mt-24 max-w-3xl mx-auto">
      <div class="bg-[#366951] text-white p-12 border-4 border-[#366951]">
        <h3 class="font-heading font-bold text-3xl mb-6"> ðŸ“£ Cancellation Policy</h3>
        <p class="text-white/90 leading-relaxed">
          Please provide at least 4 hours notice for cancellations or modifications. Late cancellations and no-shows may be subject to fees (50%-100% of service cost). We value your time and oursâ€”open communication helps us serve everyone better.
        </p>
      </div>
    </div>
  </div>
</section>
</>