<section id="contact" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="font-display font-bold text-3xl md:text-4xl text-[#366951] mb-2">
        VISIT US
      </h2>
      <p class="text-lg text-[#366951]">
        We're located in the heart of Gig Harbor
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-7xl mx-auto">
      <!-- Left Column: Contact Info -->
      <div>
        <!-- Contact Information -->
        <div class="space-y-6">
      <!-- Address -->
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-12 h-12 bg-[#366951]/10 rounded-full flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#366951]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
