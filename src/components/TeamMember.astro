---
import { Image } from 'astro:assets';

interface Props {
  member: {
    id: string;
    name: string;
    role: string;
    bio: string;
    specialties: string[];
    bookingType: string;
    bookingUrl?: string;
    phone?: string;
    instagram?: string;
    availability?: string;
    image: string;
  };
}

const { member } = Astro.props;

// Import the image dynamically
const images = import.meta.glob('/src/images/team/*.{png,jpg,jpeg,webp}', { eager: true });
const imagePath = member.image;
const imageModule = images[imagePath] as { default: ImageMetadata };
---

<div class="bg-white border-2 border-[#366951] transition-all duration-300 group p-8">
  <!-- Photo -->
  <div class="w-full aspect-square mx-auto mb-6 overflow-hidden border-2 border-[#366951]">
    {imageModule ? (
      <Image
        src={imageModule.default}
        alt={member.name}
        width={400}
        height={400}
        class="w-full h-full object-cover"
        format="webp"
        quality={85}
      />
    ) : (
      <div class="w-full h-full bg-[#366951] group-hover:bg-white flex items-center justify-center">
        <span class="text-5xl font-display font-black text-white group-hover:text-[#366951]">{member.name.charAt(0)}</span>
      </div>
    )}
  </div>

  <!-- Name and Role -->
  <h3 class="font-heading font-bold text-3xl text-center tracking-tight mb-2 text-[#366951]">
    {member.name}
  </h3>
  <p class="text-center text-sm uppercase tracking-widest text-[#366951]/70 mb-6">{member.role}</p>

  <!-- Bio -->
  <p class="text-[#366951]/90 mb-6 leading-relaxed text-sm">{member.bio}</p>

  <!-- Specialties -->
  <div class="mb-6">
    <p class="font-bold text-xs uppercase tracking-widest text-[#366951]/70 mb-3">Specialties</p>
    <div class="flex flex-wrap gap-2">
        {member.specialties.map((specialty) => (
          <span class="text-xs px-2 py-1 border border-[#366951] text-[#366951] uppercase tracking-wider">
            {specialty}
          </span>
        ))}
      </div>
    </div>

    <!-- Availability (if provided) -->
    {member.availability && (
      <p class="text-sm text-[#366951]/70 mb-4 italic">
        ðŸ“… {member.availability}
      </p>
    )}

    <!-- Booking Button -->
    <div class="mt-6">
      {member.bookingType === 'phone' ? (
        <a
          href={`tel:${member.phone}`}
          class="block w-full bg-[#366951] group-hover:bg-[#2a5240] text-white text-center px-6 py-4 font-bold uppercase tracking-wide text-sm border-2 border-[#366951] group-hover:border-[#2a5240] transition-colors"
        >
          Call to Book
        </a>
      ) : member.bookingType === 'none' ? (
        <button class="block w-full bg-[#366951]/30 text-[#366951] text-center px-6 py-4 font-bold uppercase tracking-wide text-sm cursor-not-allowed" disabled>
          Coming Soon
        </button>
      ) : (
        <a
          href={member.bookingUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full bg-[#366951] group-hover:bg-[#2a5240] text-white text-center px-6 py-4 font-bold uppercase tracking-wide text-sm border-2 border-[#366951] group-hover:border-[#2a5240] transition-colors"
        >
          Book with {member.name}
        </a>
      )}
    </div>

    <!-- Instagram Link (if provided) -->
    {member.instagram && (
      <div class="text-center mt-3">
        <a
          href={`https://instagram.com/${member.instagram.replace('@', '')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="text-[#366951] hover:text-[#2a5240] transition-colors text-sm inline-flex items-center gap-1"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          {member.instagram}
        </a>
      </div>
    )}
  </div>
</div>
