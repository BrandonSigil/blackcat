---
// Easy configuration
const phrases = [
"We're hiring! barbershopblackcat@gmail.com"
];
const separator = "â˜…";
const spacing = 25;

// Build the marquee text
const spacer = " ".repeat(spacing);
const marqueeText = phrases.join(`${spacer}${separator}${spacer}`) + `${spacer}${separator}${spacer}`;
const repeatedText = marqueeText.repeat(10);
---

<div class="marquee-wrapper">
  <div class="marquee-container">
    <div class="marquee-banner">
      <div class="marquee-content">
        {repeatedText}
      </div>
      <div class="marquee-content" aria-hidden="true">
        {repeatedText}
      </div>
    </div>
  </div>
</div>

<style>
  .marquee-wrapper {
    position: relative;
    width: 100%;
    padding: 0.5rem 0;
    background-color: transparent;
    overflow: hidden;
  }

  .marquee-container {
    position: relative;
    margin: 0 0.5rem;
  }

  .marquee-banner {
    display: flex;
    overflow: hidden;
    background-color: #f4f3e8;
    border-radius: 100px;
    padding: 0.65rem 0;
    position: relative;
    user-select: none;
  }

  .marquee-content {
    flex-shrink: 0;
    display: inline-block;
    color: #436853;
    font-family: 'Zalando Sans Expanded', system-ui, sans-serif;
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.2em;
    white-space: nowrap;
    animation: scroll 60s linear infinite;
    padding: 0 2rem;
    
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .marquee-banner:hover .marquee-content {
    animation-play-state: paused;
  }

  @media (prefers-reduced-motion: reduce) {
    .marquee-content {
      animation: none;
    }
  }

  @media (max-width: 768px) {
    .marquee-content {
      font-size: 0.75rem;
      animation-duration: 50s;
    }
  }

  @media (max-width: 480px) {
    .marquee-content {
      font-size: 0.65rem;
      letter-spacing: 0.15em;
    }
  }
</style>
